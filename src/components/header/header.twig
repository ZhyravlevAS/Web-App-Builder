            {% for item in navigation %}
                <li role="presentation" {% if item.active %}class="active"{% endif %}><a href="{{ item.href }}">{{ item.caption }}</a></li>
            {% endfor %}
        </ul>
    </nav>
    <h3 class="text-muted">{{ name }}</h3>
</div>